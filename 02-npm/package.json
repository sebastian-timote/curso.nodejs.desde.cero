{
  "name": "aprendiendo-npm",
  "version": "1.0.0",
  "description": "en este paquete aprenderemos a trabajar con npm",
  "main": "gulpfile.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build:prod && npm run watch:prod",
    "pug": "gulp pug",
    "sass": "gulp sass",
    "es6": "gulp es6",
    "serve": "browser-sync start --server --startPath \"dist\" --files \"dist/**/*.+(html|css|js)\"",
    "build:dev": "npm run pug && npm run sass && npm run es6",
    "watch:pug": "onchange \"./src/pug/**\" -- npm run pug",
    "watch:sass": "onchange \"./src/scss/**\" -- npm run sass",
    "watch:es6": "onchange \"./src/es6/**\" -- npm run es6",
    "watch:dev": "parallelshell \"npm run serve\" \" npm run watch:pug\" \"npm run watch:sass\" \"npm run watch:es6\"",
    "img": "gulp img",
    "svg": "gulp svg",
    "webp": "gulp webp",
    "resize": "magick mogrify -resize \"1024>\" ./dist/img/*.*",
    "build:media": "npm run img && npm run svg && npm run webp && npm run resize && npm run fonts && npm run statics",
    "images": "npm run img && npm run webp && npm run resize",
    "css": "gulp css",
    "js": "gulp js",
    "html": "gulp html",
    "build:prod": "npm run css && npm run js && npm run html",
    "watch:css": "onchange \"./dist/css/**\" -- npm run css",
    "watch:js": "onchange \"./dist/js/**\" -- npm run js",
    "watch:html": "onchange \"./dist/*.html\" -- npm run html",
    "watch:prod": "parallelshell \"npm run serve\" \" npm run watch:css\" \"npm run watch:js\" \"npm run watch:html\""
  },
  "author": "sebastian timote <stimotev11@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "animate.css": "^4.1.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.5.1",
    "owl.carousel": "^2.3.4",
    "responsimple": "^1.0.1",
    "wowjs": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/register": "^7.10.1",
    "babel-register": "^6.26.0",
    "browser-sync": "^2.26.7",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-pug": "^4.0.1",
    "gulp-purgecss": "^2.3.0",
    "gulp-sass": "^4.1.0",
    "gulp-svgmin": "^2.2.0",
    "gulp-uglify": "^3.0.2",
    "gulp-uncss": "^1.0.6",
    "gulp-useref": "^4.0.1",
    "gulp-webp": "^4.0.1",
    "imagemin-pngquant": "^9.0.0",
    "onchange": "^7.0.2",
    "parallelshell": "^3.0.2",
    "pug": "^3.0.1"
  }
}
