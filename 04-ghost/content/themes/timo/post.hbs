{{!< default}}
{{#post}}
    <article>
        <header class="post__background-image container" style="background-image: url({{feature_image}});">
            <div class="post__background-image-text">
                <h1 class="title has-text-white">{{title}}</h1>
                <time class="subtitle has-text-white">
                    {{date format="DD MMMM YYYY"}}
                </time>
            </div>
        </header>
        <section class="container">
            <div class="content">
                {{content}}
            </div>
        </section>
    </article>
    <section class="container">
        <div id="disqus_thread"></div>
        <script>

        /**
        *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
        *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables*/

        var disqus_config = function () {
        this.page.url = 'https://blog.timo.io';  // Replace PAGE_URL with your page's canonical URL variable
        this.page.identifier = 'ghost-{{comment_id}}'; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
        };

        (function() { // DON'T EDIT BELOW THIS LINE
        var d = document, s = d.createElement('script');
        s.src = 'https://timo-1.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
        })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

    </section>
    {{#if @labs.subscribers}}
        <section class="section">
            <div class="container">
                {{subscribe_form}}
            </div>
        </section>
    {{/if}}
{{/post}}
